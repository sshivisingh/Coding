weather = input("WHAT'S THE WEATHER TODAY:")

if weather == "SUNNY" or weather == "sunny":
    print("GO FOR WALK")
elif weather == "RAINY" or weather == "rainy":
    print("READ A BOOK")
elif weather == "SNOWY" or weather == "snowy":
    print("BUILD A SNOWMAN")
elif weather == "WINTER" or weather == "winter":
    print("MAKE CHAI")
else:
    print("ENTER THE CORRECT WEATHER (SUNNY,RAINY,SNOWY,WINTER)")
